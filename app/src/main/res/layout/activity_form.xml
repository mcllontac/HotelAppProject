<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FormActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/formbg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="Contact Number"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/check_in"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="Check In"
                android:inputType="date"
                android:maxLines="1"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/check_out"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="Check Out"
                android:inputType="date"
                android:maxLines="1"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/numPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/number"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="No. of Persons"
                android:inputType="date"
                android:maxLines="1"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:padding="5dp"
                android:text="NEXT"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnPrev"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:background="#00000"
                android:text="PREVIOUS"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>