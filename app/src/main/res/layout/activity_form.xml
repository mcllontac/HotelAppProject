<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".FormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D2001A"
                android:padding="25dp"
                android:paddingBottom="25dp"
                android:shadowColor="#E4000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="0.01"
                android:text="Reservation Form"
                android:textAlignment="center"
                android:textColor="#FFDE00"
                android:textSize="27sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="Contact Number"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/check_in"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Check In"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/editOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/check_out"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Check Out"
                android:inputType="date"
                android:maxLines="1"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/numPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/number"
                android:drawablePadding="10dp"
                android:drawableTint="@color/teal_700"
                android:hint="No. of Persons"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnNext"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFDE00"
                android:text="Next"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPrev"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFDE00"
                android:text="Previous"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>