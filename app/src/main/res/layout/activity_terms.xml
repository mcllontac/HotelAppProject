<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/t"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="vertical"
    tools:context=".TermsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2001A"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:paddingBottom="25dp"
            android:shadowColor="#B4090909"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="0.01"
            android:text="TERMS AND CONDITIONS"
            android:textAlignment="center"
            android:textColor="#FFDE00"
            android:textSize="27sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:background="@drawable/shadows"
            android:backgroundTint="#FFFAE7"
            android:elevation="10dp"
            android:text="This Application (estore.togo.com.ph) (&quot;this Site&quot; or “TOGO eStore”) is owned and operated by TOGO Philippines Co., Ltd. (&quot;TOGO&quot;) in Philippines. Access to and use of this App and related services (collectively, the “Services”) are made available to you in accordance with the following Terms &amp; Conditions and any other rules, policies and privacy policy posted on the App. By using the Services, such as browsing or placing orders on this App, you are agreeing to all of the Terms and Conditions and that you accept and agree to be bound by them."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAgree"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFDE00"
            android:text="I Agree"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFDE00"
            android:text="Back"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>